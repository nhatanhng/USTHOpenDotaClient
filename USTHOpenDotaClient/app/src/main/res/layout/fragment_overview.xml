<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".searchplayerfragment.MatchesHistoryFragment"
        android:background="@color/background"
        android:padding="15dp">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".searchplayerfragment.MatchesHistoryFragment"
            android:background="@color/item"
            android:layout_weight="1">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/A_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/outline_account_circle_24"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/A_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="jojo"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="25sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="9"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/wins"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="@color/wins_loses_winrate"
                    android:text="WINS\n45"
                    android:textSize="@dimen/wins_loses_winrate"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/losses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="LOSSES\n50"
                    android:textColor="@color/wins_loses_winrate"
                    android:textSize="@dimen/wins_loses_winrate"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/winrate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="WINRATE\n47%"
                    android:textColor="@color/wins_loses_winrate"
                    android:textSize="@dimen/wins_loses_winrate"
                    android:textAlignment="center"/>
            </LinearLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:src="@drawable/dota_2_rank_guardian_5"
                />
            <ProgressBar
                android:id="@+id/progressBar"
                android:paddingTop="18dp"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:max="100"
                android:progress="47"
                android:secondaryProgress="100"
                android:progressTint="@color/winProgress"
                android:secondaryProgressTint="@color/looseProgress"
                style="@android:style/Widget.ProgressBar.Horizontal"/>
            <TextView
                android:id="@+id/profile_steam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="stream account goes here"
                android:padding="15dp"
                android:textSize="15sp"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/recent_matches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".searchplayerfragment.MatchesHistoryFragment"
            android:background="@color/item"
            android:layout_marginTop="10dp"
            android:layout_weight="1">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RECENT MATCHES"
                    android:textAlignment="center"
                    android:textSize="25sp"
                    android:padding="7dp"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/light_blue">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:padding="10dp"
                android:layout_marginTop="2dp">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="Hero"
                    android:textSize="@dimen/recentMaches_overview_textsize"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="Mode"
                    android:textSize="@dimen/recentMaches_overview_textsize"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="Match"
                    android:textSize="@dimen/recentMaches_overview_textsize"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="Length"
                    android:textSize="@dimen/recentMaches_overview_textsize"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="K/D/A"
                    android:textSize="@dimen/recentMaches_overview_textsize"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="5"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:weightSum="1"
                    android:background="@color/gray"
                    >
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:src="@drawable/antim"
                        />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="24dp"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text="Ranked"
                        android:textSize="@dimen/recentMaches_overview_textsize"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text="Win"
                        android:textSize="@dimen/recentMaches_overview_textsize"
                        android:textColor="@color/win"/>
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text="35:03"
                        android:textSize="@dimen/recentMaches_overview_textsize"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text="11/2/8"
                        android:textSize="@dimen/recentMaches_overview_textsize"
                        android:textColor="@color/white"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:weightSum="1"
                    android:background="@color/purple"
                    >
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:src="@drawable/tinker"
                        />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="24dp"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text="Ranked"
                        android:textSize="@dimen/recentMaches_overview_textsize"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text="Win"
                        android:textSize="@dimen/recentMaches_overview_textsize"
                        android:textColor="@color/win"/>
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text="45:23"
                        android:textSize="@dimen/recentMaches_overview_textsize"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text="1/0/5"
                        android:textSize="@dimen/recentMaches_overview_textsize"
                        android:textColor="@color/white"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:weightSum="1"
                    android:background="@color/gray"
                    >
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:src="@drawable/slark"
                        />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="24dp"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text="Ranked"
                        android:textSize="@dimen/recentMaches_overview_textsize"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text="@dimen/recentMaches_overview_textsize"
                        android:textSize="@dimen/recentMaches_overview_textsize"
                        android:textColor="@color/lose"/>
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text="20:44"
                        android:textSize="@dimen/recentMaches_overview_textsize"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text="9/3/18"
                        android:textSize="@dimen/recentMaches_overview_textsize"
                        android:textColor="@color/white"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:weightSum="1"
                    android:background="@color/purple">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:src="@drawable/antim"
                        />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="24dp"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text="Ranked"
                        android:textSize="@dimen/recentMaches_overview_textsize"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text="Lose"
                        android:textSize="@dimen/recentMaches_overview_textsize"
                        android:textColor="@color/lose"/>
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text="36:57"
                        android:textSize="@dimen/recentMaches_overview_textsize"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text="8/4/8"
                        android:textSize="@dimen/recentMaches_overview_textsize"
                        android:textColor="@color/white"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:weightSum="1"
                    android:background="@color/gray"
                    >
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:src="@drawable/sfiend"
                        />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="24dp"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text="Ranked"
                        android:textSize="@dimen/recentMaches_overview_textsize"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text="Win"
                        android:textSize="@dimen/recentMaches_overview_textsize"
                        android:textColor="@color/win"/>
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text="35:03"
                        android:textSize="@dimen/recentMaches_overview_textsize"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text="1/2/8"
                        android:textSize="@dimen/recentMaches_overview_textsize"
                        android:textColor="@color/white"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>